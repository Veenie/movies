<h1>Edit Post</h1>
<form action="/movies/<%=@movie.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label>Title:</label>
    <input type="text" value="<%=@movie.title%>" name="title">
    <label>Star Rating:</label>
    </br>
    </br>
    <label><strong>1 Star</strong></label>
    <input type="radio" name="rating" value="1">
    </br>
    <label><strong>2 Stars</strong></label>
    <input type="radio" name="rating" value="2">
    </br>
    <label><strong>3 Stars</strong></label>
    <input type="radio" name="rating" value="3">
    </br>
    <label><strong>4 Stars</strong></label>
    <input type="radio" name="rating" value="4">
    </br>
    <label><strong>5 Stars</strong></label>
    <input type="radio" name="rating" value="5">
    </br>
    </br>
    <input type="submit" value="Edit Movie">
</form>

